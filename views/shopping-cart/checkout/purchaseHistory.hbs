<!--================Shopping Cart Area =================-->
<section class="shopping_cart_area p_100" id="shopping-cart">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="purchase_list">
                    <h3 class="cart_single_title">Your Purchase History</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Owner</th>
                                <th scope="col">Status</th>
                                <th scope="col">Total Payment</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Receipts}}
                            <a href="/{{_id}}">
                                <tr>
                                    <th scope="row">{{@index}}</th>
                                    <td>{{name}}</td>
                                    <td>{{status}}</td>
                                    <td>{{totalPrice}}</td>
                                    <td>{{createdDate}}</td>
                                </tr>
                            </a>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>