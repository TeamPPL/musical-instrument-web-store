        <!--================login Area =================-->
        <section class="login_area p_100">
            <div class="container">
                <div class="login_inner">
                    <div class="row">
                        <div class="col-lg-4"></div>
                        <div class="col-lg-4">
                            <div class="login_title">
                                <h2>Reset Password</h2>
                                <p>Enter your registered email and we will send you an email to reset your password.</p>
                            </div>
                            <form class="login_form row" action="/user/forgot" method="POST">
                                <div class="col-lg-12 form-group">
                                    <input class="form-control" type="text" name="email" placeholder="Email">
                                </div>
                                <div class="col-lg-12 form-group">
                                    <button type="submit" value="submit" class="btn update_btn form-control">Send</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                </div>
            </div>
        </section>