        <script src="/js/jquery-3.2.1.min.js"></script>
        <script>
        $(document).ready( function(){
        
            $('#name').focusout(checkName);
            $('#email').focusout(checkEmail);
            $('#username').focusout(checkUsername);
            $('#phone').focusout(checkPhone);
            $('#pass').focusout(checkPassword);
            $('#repass').focusout(checkRePassword);
            $('#termCheck').click(checkCheckBox);

            function checkName() {
                let name = $('#name').val();

                if (name === "")
                {
                    $('#name').addClass("error-input");
                    $('#name-notification').css("display", "block");
                    return false;
                }
                else 
                {
                    $('#name').removeClass("error-input");
                    $('#name-notification').css("display", "none");
                }

                return true;
            }

            function validateEmail(email) {
                const re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(email);
            }

            async function checkEmail() {
                let email = $('#email').val();
                
                if (email === "")
                {
                    $('#email').addClass("error-input");
                    $('#email-notification').css("display", "block");
                    $('#email-notification span').text("You need to enter your email.");
                    return false;
                }
                else 
                {
                    //Check email valid
                    if (!validateEmail(email))
                    {
                        $('#email').addClass("error-input");
                        $('#email-notification').css("display", "block");
                        $('#email-notification span').text("This email is invalid. Make sure it's written like example@email.com");
                        return false;

                    }
                    else
                    {
                        let data = {
                            email: email
                        }
                        let isok = false;
                        await $.post('/user/signup/checkdata', data, (result, status) => {
                            if (result.status === -1)
                            {
                                $('#email').addClass("error-input");
                                $('#email-notification').css("display", "block");
                                $('#email-notification span').text("You need to enter your email.");
                                isok = false;

                            } else if (result.status === 0)
                            {
                                $('#email').addClass("error-input");
                                $('#email-notification').css("display", "block");
                                $('#email-notification span').text("This email is already used by other account.");
                                isok = false;
                            } else if (result.status === 1)
                            {
                                $('#email').removeClass("error-input");
                                $('#email-notification').css("display", "none");
                                isok = true;
                            }
                            return;
                        });

                        return isok;
                    }
                }
            }

            async function checkUsername() {
                let username = $('#username').val();
                
                if (username === "")
                {
                    $('#username').addClass("error-input");
                    $('#username-notification').css("display", "block");
                    $('#username-notification span').text("You need to enter your username.");
                    return false;
                }
                else 
                {
                    
                    let data = {
                        username: username
                    }
                    let isok = false;
                    await $.post('/user/signup/checkdata', data, (result, status) => {
                        if (result.status === -1)
                            {
                                $('#username').addClass("error-input");
                                $('#username-notification').css("display", "block");
                                $('#username-notification span').text("You need to enter your username.");
                                isok = false;
                            } else if (result.status === 0)
                            {
                                $('#username').addClass("error-input");
                                $('#username-notification').css("display", "block");
                                $('#username-notification span').text("This username is already used by other account.");
                                isok = false;
                            } else if (result.status === 1)
                            {
                                $('#username').removeClass("error-input");
                                $('#username-notification').css("display", "none");
                                isok = true;
                            }
                            return;
                    });
                    return isok;
                }
            }

            function checkPhone() {
                let phone = $('#phone').val();

                if (phone === "")
                {
                    $('#phone').addClass("error-input");
                    $('#phone-notification').css("display", "block");
                    return false;
                }
                else 
                {
                    $('#phone').removeClass("error-input");
                    $('#phone-notification').css("display", "none");
                }

                return true;
            }

            function checkPassword() {
                let pass = $('#pass').val();

                if (pass === "")
                {
                    $('#pass').addClass("error-input");
                    $('#pass-notification').css("display", "block");
                    return false;
                }
                else
                {
                    $('#pass').removeClass("error-input");
                    $('#pass-notification').css("display", "none");
                }

                return true;
            }

            function checkRePassword() {
                let pass = $('#pass').val();
                let repass = $('#repass').val();

                if (repass === "")
                {
                    $('#repass').addClass("error-input");
                    $('#repass-notification').css("display", "block");
                    $('#repass-notification span').text("You need to enter your comfirm password.");
                    return false;
                }
                else if (pass !== repass)
                {
                    $('#repass').addClass("error-input");
                    $('#repass-notification').css("display", "block");
                    $('#repass-notification span').text("Comfirm password don't match.");
                    return false;
                } else 
                {
                    $('#repass').removeClass("error-input");
                    $('#repass-notification').css("display", "none");
                }

                return true;
            }

            function checkCheckBox() {
                console.log(this.checked);
                if (this.checked)
                {
                    console.log(this.checked);
                    $('#submitBtn').prop("disabled", false);
                    return true;
                }

                $('#submitBtn').prop("disabled", true);
            }
            

            //$('#submitBtn').click(validateForm);

            async function validateForm() {
                //event.preventDefault();
                let isCheckName = await checkName();
                let isCheckEmail = await checkEmail();
                let isCheckUsername = await checkUsername();
                let isCheckPhone = await checkPhone();
                let isCheckPass = await checkPassword();
                let isCheckRePass = await checkRePassword();

                if ( isCheckName && isCheckEmail && isCheckUsername && isCheckPhone && isCheckPass && isCheckRePass)
                {
                    $('#signupForm').submit();
                    return true;
                }
                return false;
            }

            document.getElementById('signupForm').addEventListener('submit', async (e) => {
                e.preventDefault();

                $("#loader").css("visibility", "visible");
                $("#loader").css("position", "relative");
                $('#captcha-notification').css("display", "none");

                let isCheckName = await checkName();
                let isCheckEmail = await checkEmail();
                let isCheckUsername = await checkUsername();
                let isCheckPhone = await checkPhone();
                let isCheckPass = await checkPassword();
                let isCheckRePass = await checkRePassword();

                if ( isCheckName && isCheckEmail && isCheckUsername && isCheckPhone && isCheckPass && isCheckRePass)
                {
                    const name = document.querySelector('#name').value;
                    const email = document.querySelector('#email').value;
                    const username = document.querySelector('#username').value;
                    const phone = document.querySelector('#phone').value;
                    const password = document.querySelector('#pass').value;
                    const termCheck = document.querySelector('#termCheck').value;
                    const captcha = document.querySelector('#g-recaptcha-response').value;

                    if (!captcha)
                    {

                    }

                    console.log(captcha);
                    return fetch('/user/signup', {
                        method: 'POST',
                        headers: { 'Content-type': 'application/json' },
                        body: JSON.stringify({ name, email, username, phone, password, captcha, termCheck })
                        })
                        .then(res => res.json())
                        .then(data => {
                            
                            if (data.noCaptcha)
                                {
                                    $('#captcha-notification').css("display", "block");
                                    $("#loader").css("visibility", "hidden");
                                    $("#loader").css("position", "absolute");
                                    return false;
                                }

                            if (data.reload) return location.reload();

                            if (data.success) return window.location.href = data.path;
                    });

                }
                return false;
            })
            
        });
</script>