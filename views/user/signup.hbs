            $('#email').focusout(clearAlerts);
            $('#username').focusout(clearAlerts);
            $('#pass').focusout(clearAlerts);
            $('#repass').focusout(clearAlerts);

            $('#email').focusout(triggerIfAvailableEmailCheck);
