            function checkPassword() {
                let pass = $('#pass').val();
                let repass = $('#repass').val();

                if (pass === "")
                    insertNewAlert("Password cannot be empty!");
                if (repass === "")
                    insertNewAlert("Re-Password cannot be empty!");

                if (pass !== repass)
                    insertNewAlert("Re-Password doesn't match Password!");

                return;
            }

            function insertNewAlert(message) {
                let node = document.createElement("LI");
                node.setAttribute("class", "alert alert-danger");
                node.innerText = message;
                $("#alert-messages").append(node);
            }

            function clearAlerts() {
                $("#alert-messages").html("");
                return;
            }

            function validate() {
                let email = $('#email').val();

                if(email === "")
                    return;
                if (validateEmail(email))
                    return;
                insertNewAlert("Email is not valid!");
                return;
            }

            function triggerIfAvailableEmailCheck() {
                let data = {
                    email: $('#email').val()
                }
                sendRequest(data);
                return;
            }

            function triggerIfAvailableUsernameCheck() {
                let data = {
                    username: $('#username').val()
                }
                sendRequest(data);
                return;
            }
            
            function sendRequest(data) {
                $.post('/user/signup/checkdata', data, (result, status) => {
                result.messageList.forEach(mess => {
                        insertNewAlert(mess);
                    });
                });
                return;
            }

            $('#submitBtn').click(validateForm);

            function validateForm() {
                //event.preventDefault();
                clearAlerts();
                checkPassword();
                triggerIfAvailableEmailCheck();
                triggerIfAvailableUsernameCheck();
                validate();

                let count = $("#alert-messages").children().length;
                console.log(count);
                if (count > 0 )
                    return false;
                $('#signupForm').submit();
            }

        });
</script>