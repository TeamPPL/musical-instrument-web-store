{{#each cartItems}}
<tr class="cart-rows">
    <th scope="row">
        <img src="../img/icon/close-icon.png" alt="" id="{{item._id}}" class="btn-remove">
    </th>
    <td>
        <div class="media">
            <div class="d-flex">
                <img src="{{item.cover}}" width="40px" height="60px" alt="">
            </div>
            <div class="media-body">
                <h4>{{item.title}}</h4>
            </div>
        </div>
    </td>
    <td><p class="item_price">${{item.price}}</p></td>
    <td>{{#if item.discount}}<p class="item_discount">${{item.discount}}</p> {{/if}}</td>
    <td><input class="cart-quantity" id="{{item._id}}" type="number" value="{{qty}}"></td>
    <td><p class="item_total_price">${{price}}</p></td>
</tr>
{{/each}}